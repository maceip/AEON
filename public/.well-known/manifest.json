{
  "name": "friscy",
  "short_name": "friscy",
  "description": "Fast RISC-V Runtime for Browser & Wasm. Run Linux containers and agentic workloads directly in your browser.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "background_color": "#050810",
  "theme_color": "#050810",
  "orientation": "any",
  "icons": [
    {
      "src": "/friscy-bundle/riscv-logo.jpg",
      "sizes": "192x192",
      "type": "image/jpeg"
    },
    {
      "src": "/friscy-bundle/claude-sparkle.svg",
      "sizes": "any",
      "type": "image/svg+xml"
    }
  ],
  "categories": ["development", "utilities", "productivity"],
  "screenshots": [
    {
      "src": "/friscy-bundle/riscv-logo.jpg",
      "sizes": "800x600",
      "type": "image/jpeg",
      "form_factor": "wide",
      "label": "friscy Desktop Environment"
    }
  ],
  "share_target": {
    "action": "/?share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "file",
          "accept": ["application/x-tar", "application/gzip", "text/*", "image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/?open-file",
      "accept": {
        "application/x-tar": [".tar"],
        "application/gzip": [".tar.gz", ".tgz"],
        "text/plain": [".txt", ".md", ".json", ".js", ".ts", ".c", ".cpp", ".rs", ".go", ".py"]
      },
      "icons": [
        {
          "src": "/friscy-bundle/riscv-logo.jpg",
          "sizes": "192x192",
          "type": "image/jpeg"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+friscy",
      "url": "/?protocol=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "shortcuts": [
    {
      "name": "New Alpine Instance",
      "url": "/?preset=alpine",
      "description": "Launch a new Alpine Linux container",
      "icons": [{ "src": "/friscy-bundle/alpine-icon.svg", "sizes": "any" }]
    },
    {
      "name": "New Claude Instance",
      "url": "/?preset=claude",
      "description": "Launch a new Claude Code environment",
      "icons": [{ "src": "/friscy-bundle/claude-sparkle.svg", "sizes": "any" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "webmcp": {
    "enabled": true,
    "tools": [
      {
        "name": "import_docker_image",
        "description": "Pull a Docker image from Docker Hub and run it in a RISC-V emulator",
        "url": "/?tool=import_docker_image"
      },
      {
        "name": "spawn_dual_terminal",
        "description": "Open a side-by-side workspace with a cloud RISC-V terminal and a local filesystem terminal",
        "url": "/?tool=spawn_dual_terminal"
      }
    ]
  }
}
